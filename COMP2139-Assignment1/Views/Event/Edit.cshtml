@model Event
@*Edit view, nothing unlike what we did in labs*@
@{
    ViewBag.Title = "Edit Event;";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EventId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" /> @*Datetime-local saves both time and date*@
    </div>
    <div class="form-group">
        <label asp-for="TicketPrice"></label>
        <input asp-for="TicketPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AvailableTickets"></label>
        <input asp-for="AvailableTickets" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"></select>
    </div>
    <input type="submit" value="Save" class="btn btn-success" />
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts { 
    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    } 
}