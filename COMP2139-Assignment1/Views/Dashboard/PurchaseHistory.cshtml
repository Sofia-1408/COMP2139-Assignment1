
@model IEnumerable<COMP2139_Assignment1.Models.Purchase>

@{
    ViewData["Title"] = "Purchase History";
}

<div class="container mt-4">
    <h2 class="mb-3">Purchase History</h2>

    @if (Model == null || !Model.Any())
    {
        <p>You have not purchased any tickets yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Quantity</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var purchase in Model)
            {
                var evt = purchase.Event;

                <tr>
                    <td>@evt?.Title</td>
                    <td>@evt?.Date.ToShortDateString()</td>
                    <td>@purchase.Quantity</td>
                    <td>
                        <form asp-action="Rate" asp-controller="Purchase" method="post" class="d-flex">
                            <input type="hidden" name="purchaseId" value="@purchase.PurchaseId" />
                            <select name="rating" class="form-select form-select-sm" style="width: 90px;">
                                <option value="">Rate</option>
                                <option value="1">1 ★</option>
                                <option value="2">2 ★★</option>
                                <option value="3">3 ★★★</option>
                                <option value="4">4 ★★★★</option>
                                <option value="5">5 ★★★★★</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-outline-primary ms-2">Save</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>