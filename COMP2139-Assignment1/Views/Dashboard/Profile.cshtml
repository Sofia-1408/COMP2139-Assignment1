@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <h2 class="mb-3">Profile</h2>

    <form asp-action="Profile" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input id="fullName" name="fullName" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input id="phoneNumber" name="phoneNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="profilePicture" class="form-label">Profile Picture</label>
            <input id="profilePicture" name="profilePicture" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>