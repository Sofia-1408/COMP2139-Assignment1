@model Purchase
@*Create view, nothing unlike what we did during labs*@
@{
    ViewData["Title"] = "Create Purchase";
}

<h2>Create Purchase</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PurchaseDate"></label>
        <input asp-for="PurchaseDate" class="form-control" type="datetime-local" />@*Datetime local allows the user to add both time and date, no reason to have two columns when we can have one*@
    </div>
    <div class="form-group">
        <label asp-for="TotalCost"></label>
        <input asp-for="TotalCost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GuestContactInfo"></label>
        <input asp-for="GuestContactInfo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventId">Event</label>
        <select asp-for="EventId" asp-items="ViewBag.EventId" class="form-control"></select> @*Viewbag stores the list of events*@
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}