@model Purchase
@*Edit view, nothing unlike what we did in labs*@
@{
    ViewData["Title"] = "Edit Purchase";
}

<h2>Edit Purchase</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="PurchaseId" />
    <div class="form-group">
        <label asp-for="PurchaseDate"></label>
        <input asp-for="PurchaseDate" class="form-control" type="datetime-local" /> @*Datetime-local saves both time and date*@
    </div>
    <div class="form-group">
        <label asp-for="TotalCost"></label>
        <input asp-for="TotalCost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GuestContactInfo"></label>
        <input asp-for="GuestContactInfo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventId">Event</label>
        <select asp-for="EventId" asp-items="ViewBag.EventId" class="form-control"></select>
    </div>
    <input type="submit" value="Save" class="btn btn-success" />
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}