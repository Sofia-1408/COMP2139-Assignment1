@model Purchase
@*Details view, nothing unlike what we did in labs*@
@{
    ViewData["Title"] = "Purchase Details";
}

<h2>Purchase Details</h2>

<div>
    <h4>Purchase #@Model.PurchaseId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.PurchaseDate</dd>

        <dt class="col-sm-2">Total Cost</dt>
        <dd class="col-sm-10">@Model.TotalCost</dd>

        <dt class="col-sm-2">Guest Contact Info</dt>
        <dd class="col-sm-10">@Model.GuestContactInfo</dd>
        
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        
        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Model.Event?.Title</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.PurchaseId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>