@model Purchase

@{
    ViewData["Title"] = "Delete Purchase";
}

<h2>Delete Purchase</h2>

<h4>Are you sure you want to delete this purchase?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Event</dt>
    <dd class="col-sm-10">@Model.Event?.Title</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.PurchaseDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Total Cost</dt>
    <dd class="col-sm-10">@Model.TotalCost.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PurchaseId"/>
    <input type="submit" value="Delete" class="btn btn-danger"/>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>